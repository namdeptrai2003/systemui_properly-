<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="200" android:valueTo="0.2f" android:valueType="floatType" android:propertyName="alpha" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="1000" android:valueTo="1.0f" android:valueType="floatType" android:propertyName="alpha" />
        </set>
    </item>
</selector>